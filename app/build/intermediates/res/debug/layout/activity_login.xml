<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.ufrn.jardim.appjardim.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/LabelLogin"
        android:id="@+id/tvLogin"
        android:layout_alignTop="@+id/ivLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="128dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etLogin"
        android:layout_below="@+id/tvLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/LabelSenha"
        android:id="@+id/tvSenha"
        android:layout_below="@+id/etLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etSenha"
        android:layout_below="@+id/tvSenha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etLogin"
        android:layout_alignEnd="@+id/etLogin" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ivLogo"
        android:src="@drawable/logo"
        android:layout_marginRight="122dp"
        android:layout_marginEnd="122dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvSenha"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_alignRight="@+id/etLogin"
        android:layout_alignEnd="@+id/etLogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/btnEntrar"
        android:layout_below="@+id/etSenha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:onClick="menuPrincipal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/LabelRecuperarSenha"
        android:id="@+id/tvEsqueciSenha"
        android:layout_alignTop="@+id/btnEntrar"
        android:layout_alignLeft="@+id/ivLogo"
        android:layout_alignStart="@+id/ivLogo"
        android:onClick="esqueciSenha"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/LabelCadastrar"
        android:id="@+id/tvCadastrar"
        android:layout_below="@+id/tvEsqueciSenha"
        android:layout_alignLeft="@+id/tvEsqueciSenha"
        android:layout_alignStart="@+id/tvEsqueciSenha"
        android:onClick="cadastrar"
        android:clickable="true" />
</RelativeLayout>
