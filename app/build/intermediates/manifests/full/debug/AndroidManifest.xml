<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufrn.jardim.appjardim"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.ufrn.jardim.appjardim.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.ufrn.jardim.appjardim.MeuJardimActivity"
            android:label="@string/title_activity_meu_jardim" >
        </activity>
        <activity
            android:name="br.ufrn.jardim.appjardim.MeusAlertasActivity"
            android:label="@string/title_activity_meus_alertas" >
        </activity>
        <activity
            android:name="br.ufrn.jardim.appjardim.MeuCadastroActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_meu_cadastro" >
        </activity>
        <activity
            android:name="br.ufrn.jardim.appjardim.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="br.ufrn.jardim.appjardim.SobreActivity"
            android:label="@string/title_activity_sobre"
            android:screenOrientation="locked" >
        </activity>
        <activity
            android:name="br.ufrn.jardim.appjardim.CadastrarAlertaActivity"
            android:label="@string/title_activity_cadastrar_alerta" >
        </activity>
        <activity
            android:name="br.ufrn.jardim.appjardim.DispPareadosActivity"
            android:label="@string/title_activity_disp_pareados" >
        </activity>
        <activity
            android:name="br.ufrn.jardim.appjardim.CadastrarVaso"
            android:label="@string/title_activity_cadastrar_vaso" >
        </activity>
        <activity
            android:name="br.ufrn.jardim.appjardim.ProcurarDispositivosBluetooth"
            android:label="@string/title_activity_procurar_dispositivos_bluetooth" >
        </activity>
        <activity
            android:name="br.ufrn.jardim.appjardim.VisualizarVaso"
            android:label="@string/title_activity_visualizar_vaso" >
        </activity>
        <activity
            android:name="android.support.v7.widget.TestActivity"
            android:label="RecyclerViewTestActivity" />
    </application>

</manifest>