<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufrn.jardim.appjardim" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MeuJardimActivity"
            android:label="@string/title_activity_meu_jardim" >
        </activity>
        <activity
            android:name=".MeusAlertasActivity"
            android:label="@string/title_activity_meus_alertas" >
        </activity>
        <activity
            android:name=".MeuCadastroActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_meu_cadastro" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SobreActivity"
            android:label="@string/title_activity_sobre"
            android:screenOrientation="locked" >
        </activity>
        <activity
            android:name=".Editar_vaso"
            android:label="@string/title_activity_editar_vaso" >
        </activity>
        <activity
            android:name=".PareadosActivity"
            android:label="@string/title_activity_pareados" >
        </activity>
        <activity
            android:name=".CadastrarAlertaActivity"
            android:label="@string/title_activity_cadastrar_alerta" >
        </activity>
        <activity
            android:name=".DispPareadosActivity"
            android:label="@string/title_activity_disp_pareados" >
        </activity>
        <activity
            android:name=".CadastrarVaso"
            android:label="@string/title_activity_cadastrar_vaso" >
        </activity>
        <activity
            android:name=".ProcurarDispositivosBluetooth"
            android:label="@string/title_activity_procurar_dispositivos_bluetooth" >
        </activity>
    </application>

</manifest>
