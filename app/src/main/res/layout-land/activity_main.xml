<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/LabelNome"
        android:id="@+id/labelUsuarioNome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="113dp"
        android:layout_marginStart="113dp"
        android:layout_marginBottom="91dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/LabelNick"
        android:id="@+id/LabelUsuarioNick"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/labelUsuarioNome"
        android:layout_alignStart="@+id/labelUsuarioNome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/LabelAtualizar"
        android:id="@+id/labelAtualizacao"
        android:layout_below="@+id/LabelUsuarioNick"
        android:layout_alignLeft="@+id/LabelUsuarioNick"
        android:layout_alignStart="@+id/LabelUsuarioNick" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/labelAtualizacao">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btMeuJardim"
            android:layout_gravity="left|top"
            android:src="@drawable/ic_launcher"
            android:onClick="executarMeuJardimActivity"
            android:layout_marginBottom="60dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btAlertas"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ic_launcher"
            android:onClick="executarMeusAlertasActivity"
            android:layout_marginBottom="60dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btCadastroUsuario"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_launcher"
            android:onClick="executarCadastroUsuarioActivity"
            android:layout_marginBottom="60dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btAtualizar"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/ic_launcher"
            android:onClick="executarSincronizacao"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btSobre"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher"
            android:onClick="executarSobreActivity"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btSair"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_launcher"
            android:onClick="executarSair"


            />
    </FrameLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:layout_alignWithParentIfMissing="false"
        android:layout_above="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
