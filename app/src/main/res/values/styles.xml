<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ConnectGardenActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ConnectGardenActionBar</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ConnectGardenActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/verdeEscuro</item>
        <item name="background">@color/verdeEscuro</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:textColorSecondary">@color/branco</item>
    </style>

    <style name="ConnectGardenActionBarSubMenu" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/branco</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
